{{#each erros}}
 <div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}
<div class="card">
    <div class="card-body">
        <h4 class="mb-3">Editar postagem</h4>
        <form action="/admin/postagem/editar" method="POST">
            <input type="hidden" name="id" value="{{postagem._id}}">
            <label for="titulo"> Título </label>
            <input type="text" name="titulo" id="" class="form-control" required value="{{postagem.titulo}}">
            <label for="slug"> Slug </label>
            <input type="text" name="slug" id="" class="form-control" required value="{{postagem.slug}}">
            <label for="descricao"> Descrição </label>
            <input type="text" name="descricao" id="" required value="{{postagem.descricao}}" class="form-control">
            <label for="conteudo"> Conteúdo  </label>
            <textarea class="form-control" name="conteudo" id="" required >{{postagem.conteudo}}</textarea>
            <label for="categoria"> Categoria  </label>
            <select class="m-2" name="categoria" id="" required class="form-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0"> Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success" type="submit">
                Editar postagem
            </button>
        </form>
    </div>
</div>