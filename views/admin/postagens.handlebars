<h2>Lista de Postagens:</h2>
<hr>
<a href="/admin/postagens/add" class="mb-2">
    <button class="btn btn-success">Nova postagem</button>
</a>

{{#each postagens}}
<div class="card mt-2">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <p>descrição {{descricao}}</p>
        <small>Data: {{data}}</small> <br>
        <small>Categoria: {{categoria.nome}}</small> <br>
        <a href="/admin/postagens/edit/{{_id}}">
            <button type="submit" class="btn btn-warning">Editar postagem</button>
        </a>
        <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger">Deletar postagem</button></a>
    </div>
</div>
{{else}}
<p>Nenhuma postagem registrada!</p>
{{/each}}